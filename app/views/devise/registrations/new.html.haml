.single
  .single_header
    = link_to root_path do
      = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?'
  .single_main
    .signup
      %h2
        会員情報入力
      .signup_inner
        .signup_content
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            .form_group
              = f.label :nickname, "ニックネーム"
              %span.form-require 必須
              = f.text_field :nickname, autofocus: true, placeholder: '例）メルカリ太郎'
            .form_group
              = f.label :email, "メールアドレス"
              %span.form-require 必須
              = f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'PC・携帯どちらでも'
            .form_group
              = f.label :password, "パスワード"
              %span.form-require 必須
              = f.password_field :password, autocomplete: "new-password",placeholder: '6文字以上'
            .form_group
              = f.label :password, "パスワード（確認）"
              %span.form-require 必須
              = f.password_field :password_confirmation, autocomplete: "new-password",placeholder: '6文字以上'
            .form_group
              = image_tag "https://www.souichi.club/wp-content/uploads/WordPress-340.jpg"
              = f.submit '次へ進む', class:"submit-button"
  .single_footer
    .single_footer_lists
      %ul.clearfix
        %li
          = link_to 'プライバシーポリシー', ''
        %li
          = link_to 'メルカリ利用規約', ''
        %li
          = link_to '特定商取引に関する表記', ''
    .single_footer_logo
      = link_to root_path do
        = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?'
    .single_footer_copyright
      © 2019 Mercari
